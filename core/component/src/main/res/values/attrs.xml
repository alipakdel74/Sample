<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CTextView">
        <attr name="CFontStyle" format="enum">
            <enum name="medium" value="0" />
            <enum name="bold" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="InputText">
        <attr name="hint" format="string"/>
        <attr name="android:inputType"/>
        <attr name="android:maxLength"/>
        <attr name="android:maxLines"/>
        <attr name="android:minLines"/>
        <attr name="android:imeOptions"/>
        <attr name="android:textSize"/>
        <attr name="android:text"/>
        <attr name="validation_type" format="enum">
            <enum name="mobile" value="0"/>
            <enum name="phone_number" value="1"/>
            <enum name="name" value="2"/>
            <enum name="address" value="3"/>
        </attr>
    </declare-styleable>

</resources>